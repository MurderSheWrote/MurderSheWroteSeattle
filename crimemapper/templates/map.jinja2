{% extends "index.html" %}
{% block map %}
  <div class="words">
      <p>Scroll around the map below to see a selection of police incidents in Seattle</p>
  </div>
  <div>
    <div class="filter-heading">
    </div>
    <table class="check-box-form">
        <tbody>
            <tr>
                <td class="check-box">
                    <p>Homicide</p>
                    <input id="Homicide" type="checkbox" title="crime-types-check-list" value="Homicide" checked="checked">
                </td>
                <td class="check-box">
                    <p>Assault</p>
                    <input id="Assault" type="checkbox" title="crime-types-check-list" value="Assault" checked="checked">
                </td>
                <td class="check-box">
                    <p>Weapons</p>
                    <input id="Weapons" type="checkbox" title="crime-types-check-list" value="Weapons" checked="checked">
                </td>
                <td class="check-box">
                    <p>Rbbery</p>
                    <input id="Robbery" type="checkbox" title="crime-types-check-list" value="Robbery" checked="checked">
                </td>
                <td class="check-box">
                    <p>Property</p>
                    <input id="Property" type="checkbox" title="crime-types-check-list" value=id="Property" checked="checked">
                </td>
                <td class="check-box">
                    <p>Drug/Alcohol</p>
                    <input id="Drugs/Alcohol" type="checkbox" title="crime-types-check-list" value="Drugs/Alcohol" checked="checked">
                </td>
                <td class="check-box">
                    <p>Nuisance</p>
                    <input id="Nuisance" type="checkbox" title="crime-types-check-list" value="Nuisance" checked="checked">
                </td>
                <td class="check-box">
                    <p>Bulglary/Theft</p>
                    <input id="Burglary/Theft" type="checkbox" title="crime-types-check-list" value="Burglary/Theft" checked="checked">
                </td>
                <td class="check-box">
                    <p>Sin</p>
                    <input id="Sin" type="checkbox" title="crime-types-check-list" value="Sin" checked="checked">
                </td>
                <td class="check-box">
                    <p>Fraud</p>
                    <input id="Fraud" type="checkbox" title="crime-types-check-list" value="Fraud" checked="checked">
                </td>
                <td class="check-box">
                    <p>Other</p>
                    <input id="Other" type="checkbox" title="crime-types-check-list" value="Other" checked="checked">
                </td>
            </tr>
        </tbody>
    </table>
</div>
  <div id='map'></div>
  <script>
      function initMap() {
      var map;
      map = new google.maps.Map(document.getElementById('map'), {
           center: {lat:47.6067006, lng:-122.3346896},
           zoom: 13
      });
      {% for place in places %}
          var marker = new google.maps.Marker({
            map: map,
            position: {{place|safe}},
            title: 'crime'
          });
      {% endfor %}
      marker.setMap(map);
      }
  </script>
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBW8aTnczhQfI882U76VIXjEXbQcqjeedg&callback=initMap" async defer></script>
{% endblock map %}